import json

# Load the JSON data from a file
with open('name_dataa.json', 'r') as file:
    data = json.load(file)

# Initialize an empty list to store the arrays
result = []

# Iterate over the values in the data
for key, value in data.items():
    for item in value:
        result.append([
            key,
            item["full_name"],
            item["country_code"],
            item["team_name"],
            item["headshot_path"]
        ])

# Optionally, print the result
print(result)

# If you want to write the result to a new file
with open('name_data.json', 'w') as outfile:
    json.dump(result, outfile)
